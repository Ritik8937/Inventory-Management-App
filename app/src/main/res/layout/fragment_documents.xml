<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/documents">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/pictures"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Pictures"
            android:textSize="16sp"
            android:background="@drawable/document_button"
            android:onClick="add_images">
        </Button>

        <Button
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Files"
            android:textSize="16sp"
            android:background="@drawable/document_button">
        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="'Best thing about the picture is that it never changes, even when the people in it do'"
        android:textSize="20dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/black"></TextView>
</RelativeLayout>